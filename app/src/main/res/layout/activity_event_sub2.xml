<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EventSub2"

    android:id="@+id/eventsub2">

    //Title layout
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMain"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|bottom"
            android:layout_marginBottom="15dp"
            android:layout_marginRight="15dp"
            android:text="LunarFest 2020"
            android:textColor="@color/textColorWhite"
            android:textSize="25sp"
            app:fontFamily="@font/post_no_bills_colombo_regular" />

    </FrameLayout>
    //Content layout
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //scroll View inside Contents
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            //General linearLayout for vertical orientation
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //Linear layout for date and location
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp">
                    <!--                    android:orientation="vertical">-->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_today_24px"
                        android:layout_marginRight="10dp"
                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dec25~Jan15"

                        android:textColor="@color/textColorBlack"
                        android:textSize="20dp" >
                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="1dp">
                    <!--                    android:orientation="vertical">-->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_my_location_24px"
                        android:layout_marginRight="10dp"

                        tools:ignore="VectorDrawableCompat" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Oakridge"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/textColorBlack"
                        android:textSize="20dp" >
                    </TextView>
                </LinearLayout>


                //Linear layout for event picture
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    >


                    <ImageView
                        android:id="@+id/eventPicture1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        app:srcCompat="@drawable/oak1"
                        >
                    </ImageView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="click image to change"
                    android:gravity="center"/>

                //Linear layout for event title
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <TextView
                        android:id="@+id/eventTitle1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:textColor="@color/textColorBlack"
                        android:text="Oakridge"
                        android:gravity="center"/>
                </LinearLayout>

                //Linear layout for event description
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColorBlack"
                        android:textSize="30dp"
                        android:text="About" />
                    <TextView
                        android:id="@+id/eventDescription1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="ACSEAâ€™s signature events are spread
                        throughout the year: the end of winter LunarFest,
                        end of summer TAIWANfest and IPACI, and finally a
                        brand new event in partnership with Canadian Heritage
                        and Canada 150, We Are Canadians, Too!" />

                </LinearLayout>


                //Linear layout for event map
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_margin="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:textColor="@color/textColorBlack"
                        android:text="Location" />

                    <ImageView
                        android:id="@+id/eventMap1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:src="@drawable/map1" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </FrameLayout>
</LinearLayout>