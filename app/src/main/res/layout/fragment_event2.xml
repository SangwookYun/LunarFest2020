    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_weight="2"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/event6inList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/iclac" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2020 LunarFest (Living Arts Centre)"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="170dp"
                    android:layout_weight="2"
                    android:layout_margin="10dp">

                    <ImageView
                        android:id="@+id/event7inList"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/icvvag" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2020 LunarFest (Varley Art Gallery)"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>
                </LinearLayout>



            </LinearLayout>

        </ScrollView>






    </LinearLayout>


</LinearLayout>