<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/textColorWhite"
    tools:context=".MainActivity"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">


    <LinearLayout
        android:id="@+id/funstopSub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FunStopSub">

        //Title layout
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorMain"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|bottom"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:text="LunarFest 2020"
                android:textColor="@color/textColorWhite"
                android:textSize="25sp" />

        </FrameLayout>
        //Content layout
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                //General linearLayout for vertical orientation
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:weightSum="2">

                        <!--                    <TextView-->
                        <!--                        android:layout_width="0dp"-->
                        <!--                        android:layout_height="wrap_content"-->
                        <!--                        android:layout_weight="1"-->
                        <!--                        android:text="1/6 Completed"-->
                        <!--                        android:textColor="@color/textColorBlack"-->

                        <!--                        android:gravity="center"-->
                        <!--                        android:textSize="15dp"/>-->

<!--                        <TextView-->
<!--                            android:id="@+id/qrScanner"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:layout_weight="1"-->
<!--                            android:text="QR scanner"-->
<!--                            android:textColor="@color/textColorBlack"-->
<!--                            android:layout_marginTop="20dp"-->
<!--                            android:layout_marginRight="10dp"-->
<!--                            android:gravity="right"-->
<!--                            android:layout_gravity="right"-->
<!--                            android:textSize="15dp"/>-->
                        <ImageView
                            android:layout_width="50dp"
                            android:id="@+id/qrScanner"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ic_photo_camera_black_24dp">

                        </ImageView>


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vancouver Art Gallary"
                        android:textColor="@color/textColorBlack"
                        app:fontFamily="@font/neo_sans_two_regular"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="25dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jan 25 - Jan 26"
                        app:fontFamily="@font/neo_sans_two_regular"
                        android:textColor="@color/textColorBlack"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="17dp" />
                    //Linear layout for event title
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@color/colorGray"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/station1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rat"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack"
                            />

                        <CheckBox
                            android:id="@+id/station2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ox"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tiger"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rabbit"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dragon"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Snake"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Horse"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sheep"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monkey"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rooster"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dog"
                            android:textSize="18dp"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/textColorBlack" />

                        <CheckBox
                            android:id="@+id/station12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:editable="false"
                            android:text="Pig"
                            android:textColor="@color/textColorBlack"
                            android:textSize="18dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="OakRidge Mall"
                        android:textColor="@color/textColorBlack"
                        android:layout_marginTop="5dp"
                        app:fontFamily="@font/neo_sans_two_regular"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="25dp"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jan 16 - Feb 10"
                        app:fontFamily="@font/neo_sans_two_regular"
                        android:textColor="@color/textColorBlack"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="17dp" />

                    //Linear layout for event title
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@color/colorGray"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/chinese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:editable="false"
                            android:text="Chinese"
                            android:textColor="@color/textColorBlack"
                            android:textSize="18dp" />

                        <CheckBox
                            android:id="@+id/korean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:editable="false"
                            android:text="Korean"
                            android:textColor="@color/textColorBlack"
                            android:textSize="18dp" />

                        <CheckBox
                            android:id="@+id/taiwanese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:editable="false"
                            android:text="Taiwanese"
                            android:textColor="@color/textColorBlack"
                            android:textSize="18dp" />

                        <CheckBox
                            android:id="@+id/vietnamese"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="Vietnamese"
                            android:textColor="@color/textColorBlack"
                            android:textSize="18dp" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jack Poole Plaza "
                        app:fontFamily="@font/neo_sans_two_regular"
                        android:textColor="@color/textColorBlack"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="20dp"
                        android:textStyle="bold"
                        android:textSize="25dp"  />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jan 18 - Feb 9"
                        app:fontFamily="@font/neo_sans_two_regular"
                        android:textColor="@color/textColorBlack"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="17dp" />
                    //Linear layout for event title
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@color/colorGray"
                        android:orientation="vertical">

                        <CheckBox
                            android:id="@+id/jackPoole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="Coastal Lunar Lanterns"
                            android:textColor="@color/textColorBlack"
                            android:textSize="18dp" />



                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </FrameLayout>


    </LinearLayout>

    <include
        layout="@layout/app_bar_nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/colorMain"
        android:theme="@style/NavigationDrawerStyle"
        app:itemTextColor="@color/colorOrange"
        app:headerLayout="@layout/nav_header_nav"
        app:menu="@menu/activity_nav_drawer" />



</androidx.drawerlayout.widget.DrawerLayout>